<UserControl
    x:Class="KnowYourCeleb.Controls.Snapped"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:KnowYourCeleb.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">

	<UserControl.Resources>
		<Storyboard x:Name="StoryboardAnimate">
			<DoubleAnimation x:Name="DoubleAnimationWidth"
								Storyboard.TargetName="BorderBmi"
								Storyboard.TargetProperty="Width"
								EnableDependentAnimation="True"
								Duration="00:00:3"
								From="1">
				<DoubleAnimation.EasingFunction>
					<ElasticEase EasingMode="EaseOut" Oscillations="3" Springiness="9" />
				</DoubleAnimation.EasingFunction>
			</DoubleAnimation>
			<DoubleAnimation x:Name="DoubleAnimationHeight"
								Storyboard.TargetName="BorderBmi"
								Storyboard.TargetProperty="Height"
								EnableDependentAnimation="True"
								Duration="00:00:3"
								From="1">
				<DoubleAnimation.EasingFunction>
					<ElasticEase EasingMode="EaseOut" Oscillations="3" Springiness="9" />
				</DoubleAnimation.EasingFunction>
			</DoubleAnimation>
			<DoubleAnimation x:Name="DoubleAnimationFontSize"
								Storyboard.TargetName="TextBlockBmi"
								Storyboard.TargetProperty="FontSize"
								EnableDependentAnimation="True"
								Duration="00:00:3"
								From="1"
								To="30">
				<DoubleAnimation.EasingFunction>
					<ElasticEase EasingMode="EaseOut" Oscillations="3" Springiness="9" />
				</DoubleAnimation.EasingFunction>
			</DoubleAnimation>
		</Storyboard>
	</UserControl.Resources>
	<Grid Background="{StaticResource ApplicationPageBackgroundThemeBrush}" UseLayoutRounding="True">
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto" />
			<RowDefinition Height="Auto" />
			<RowDefinition Height="Auto" />
			<RowDefinition Height="*" />
		</Grid.RowDefinitions>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="20" />
			<ColumnDefinition Width="*" />
		</Grid.ColumnDefinitions>

		<TextBlock Grid.Column="1" Text="BMI Uträknaren" IsHitTestVisible="false" FontSize="40" Style="{StaticResource PageHeaderTextStyle}"/>

		<Grid Grid.Row="1" Grid.Column="1">
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="Auto" />
				<ColumnDefinition Width="*" />
			</Grid.ColumnDefinitions>
			<Grid>
				<StackPanel>
					<TextBlock Text="Längd (cm)" FontSize="30" />
					<TextBox x:Name="TextBoxHeight" Height="44" Width="200" HorizontalAlignment="Left" FontSize="25" Text="" x:FieldModifier="public" />
					<TextBlock Text="Vikt (kg)" FontSize="30" Margin="0,20,0,0" />
					<TextBox x:Name="TextBoxWeight" Height="44" Width="200" HorizontalAlignment="Left" FontSize="25" Text="" x:FieldModifier="public" />
					<Button x:Name="ButtonCalculate" Content="Beräkna" Width="200" HorizontalAlignment="Left" Margin="0,35,0,0" FontSize="25" Click="ButtonCalculate_Click" />
				</StackPanel>
			</Grid>
		</Grid>
		<Grid Grid.Row="2" Grid.Column="1">
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="Auto" />
				<ColumnDefinition Width="Auto" />
			</Grid.ColumnDefinitions>
			<Grid HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,35,0,0">
				<Border Width="280" Height="280" Background="#ff5943" />
				<Border Width="220" Height="220" Background="#ffc343" />
				<Border Width="150" Height="150" Background="#38b1c8" />
				<Border Width="80" Height="80" Background="#0e6676" />
				<Border x:Name="BorderBmi" Width="1" Height="1" Background="#69e200" Opacity="0.8" BorderThickness="2" BorderBrush="#009900" />
				<TextBlock x:Name="TextBlockBmi" FontSize="30" HorizontalAlignment="Center" VerticalAlignment="Center" />
			</Grid>
		</Grid>
		<Grid Grid.Row="3" Grid.Column="1" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,15,0,0">
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="*" />
				<ColumnDefinition Width="*" />
			</Grid.ColumnDefinitions>
			<StackPanel Grid.Column="0">
				<StackPanel Orientation="Horizontal" Margin="0,0,0,20">
					<Border Width="30" Height="30" Background="#ff5943" />
					<TextBlock Text="Fetma" FontSize="18" VerticalAlignment="Center" Margin="10,0,0,0" />
				</StackPanel>
				<StackPanel Orientation="Horizontal" Margin="0,0,0,20">
					<Border Width="30" Height="30" Background="#ffc343" />
					<TextBlock Text="Övervikt" FontSize="18" VerticalAlignment="Center" Margin="10,0,0,0" />
				</StackPanel>
			</StackPanel>
			<StackPanel Grid.Column="1" Margin="30,0,0,0">
				<StackPanel Orientation="Horizontal" Margin="0,0,0,20">
					<Border Width="30" Height="30" Background="#38b1c8" />
					<TextBlock Text="Normalvikt" FontSize="18" VerticalAlignment="Center" Margin="10,0,0,0" />
				</StackPanel>
				<StackPanel Orientation="Horizontal" Margin="0,0,0,20">
					<Border Width="30" Height="30" Background="#0e6676" />
					<TextBlock Text="Undervikt" FontSize="18" VerticalAlignment="Center" Margin="10,0,0,0" />
				</StackPanel>
			</StackPanel>
		</Grid>
	</Grid>
</UserControl>

